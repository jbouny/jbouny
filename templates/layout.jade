doctype html
block vars
  - var bodyclass = null;

- env.helpers.checkLanguage(page)
html(lang=env.helpers.getLanguage())
  head
    block head
      meta(charset='utf-8')
      meta(name='description', content='Portail professionnel de Jérémy BOUNY')
      meta(name='robots', content='INDEX, FOLLOW')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=env.helpers.makeRelative(page.url, '/feed.xml'), type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href=env.helpers.makeRelative(page.url, '/css/bootstrap-yeti.min.css'))
      link(rel='stylesheet', href=env.helpers.makeRelative(page.url, '/css/modern-business.css'))
      link(rel='stylesheet', href=env.helpers.makeRelative(page.url, '/css/style.css'))
      
  body.bodyclass
  
    header.navbar.navbar-default.navbar-fixed-top(role="navigation")
      div.container
        div.navbar-header
          button.navbar-toggle(data-toggle="collapse", data-target="#navbar-main")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href=env.helpers.makeRelative(page.url, "/index.html"))= locals.name
          
        nav.collapse.navbar-collapse#navbar-main
          ul.nav.navbar-nav.navbar-right
            li
              a(href=env.helpers.makeRelative(page.url, env.helpers.getRoot() + "/index.html"))= env.helpers.s('LAB_HOME')
            li
              a(href=env.helpers.makeRelative(page.url, env.helpers.getRoot() + "/experiences.html"))= env.helpers.s('LAB_EXPERIENCES')
            li
              a(href=env.helpers.makeRelative(page.url, env.helpers.getRoot() + "/competences.html"))= env.helpers.s('LAB_COMPETENCES')
            li
              a(href=env.helpers.makeRelative(page.url, env.helpers.getRoot() + "/formations.html"))= env.helpers.s('LAB_FORMATIONS')
            //-li
            //-  a(href=env.helpers.makeRelative(page.url, env.helpers.getRoot() + "/blog.html"))= env.helpers.s('LAB_BLOG')
            li
              a(href=env.helpers.makeRelative(page.url, env.helpers.getRoot() + "/contact.html"))= env.helpers.s('LAB_CONTACT')
                  
    block header
      
    div.container
      block content
          
      footer
        div.row
          div.col-lg-12
            p
              hr
              !=env.helpers.getFooter(contents).html
              
    script(src=env.helpers.makeRelative(page.url, '/js/jquery.min.js'))
    script(src=env.helpers.makeRelative(page.url, '/js/bootstrap.min.js'))
    
    script.
      var _paq = _paq || [];
      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u="//jeremybouny.fr/analytics/";
        _paq.push(['setTrackerUrl', u+'piwik.php']);
        _paq.push(['setSiteId', 1]);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
      })();
    noscript
      p
        img(src="http://jeremybouny.fr/analytics/piwik.php?idsite=1", style="border:0;", alt="")
    
    block script